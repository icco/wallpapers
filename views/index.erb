<!doctype html>
<html>
  <head lang="en">
    <meta charset="utf-8">
    <title>Wallpapers.</title>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  <style>

    h1 a {
      text-decoration: none;
    }

    @media (min-width: 1900px) {
      .item { width: 20%; }
    }

    @media (min-width: 900px) {
      .item { width: 25%; }
    }

    @media (max-width: 900px) {
      .item { width: 50%; }
    }

    @media (max-width: 600px) {
      .item { width: 100%; }
    }

    .item img { width: 100%; }
    .item { margin: 0; padding: 0; }
  </style>

  </head>
  <body>
    <div class="container">

      <h1><a href="/">Wallpapers</a></h1>

      <div id="box" class="thumbnails">
        <% @images.each do |file| %>
          <div class="item">
            <a href="/image/<%= file.key %>" class="thumbnail"><img src="<%= file.thumb_url %>" alt="<%= file.key %>"></a>
          </div>
        <% end %>
      </div>

      <div class="footer">
        <p class="muted"><i class="icon-edit"></i> <a href="https://github.com/icco/wallpapers">code</a> &copy; 2012 &mdash; <%= Time.now.year %> Nat Welch. Images copyright their original creators.</p>
      </div>

    </div> <!-- /container -->

    <!-- JS. Placed at the end of the document so the pages load faster -->
    <script src="/js/imagesloaded.pkgd.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.2.0/isotope.pkgd.min.js"></script>
    <script>
      var container = document.querySelector('#box');
      var options = {
        animationEngine : 'css',
        itemSelector : '.item',
        masonry: { },
        sortBy: 'random',
      };
      var iso;
      imagesLoaded(container, function() {
        iso = new Isotope(container, options);
      });
    </script>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-333449-12']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </body>
</html>
