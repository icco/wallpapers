<!doctype html>
<html>
  <head lang="en">
    <meta charset="utf-8">
    <title>Wallpapers.</title>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  <style>
    h1 a {
      text-decoration: none;
    }

    @media (min-width: 1900px) {
      .item { width: 20%; }
    }

    @media (min-width: 900px) {
      .item { width: 25%; }
    }

    @media (max-width: 900px) {
      .item { width: 50%; }
    }

    @media (max-width: 600px) {
      .item { width: 100%; }
    }

    .item img { width: 100%; }
    .item { margin: 0; padding: 0; }
  </style>

  </head>
  <body>
    <div class="container">

      <h1><a href="/">Wallpapers</a></h1>
      <h2>A Nat Welch Collection</h2>

      <div id="box" class="thumbnails">
        <!--
          <div class="item">
            <a href="/image/file.key" class="thumbnail"><img src="file.thumb_url" alt="file.key"></a>
          </div>
          -->
      </div>

      <div class="footer">
        <p class="muted"><i class="icon-edit"></i> <a href="https://github.com/icco/wallpapers">code</a> &copy; 2012 &mdash; <%= Time.now.year %> Nat Welch. Images copyright their original creators.</p>
      </div>

    </div> <!-- /container -->

    <!-- JS. Placed at the end of the document so the pages load faster -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="/js/imagesloaded.pkgd.min.js"></script>
    <script src="/js/isotope.pkgd.min.js"></script>
    <script>
      $(document).ready(function() {
        $('#box').isotope({
          animationEngine : 'css',
          itemSelector : '.item',
          masonry: { },
        });
        $.get("/all.json", parse_response).fail(function() {
          console.error("Error getting data.");
        });
      });

      function parse_response(data) {
        for (i in data) {
          build_element(data[i]["thumbnail"], data[i]["image"], data[i]["key"]);
        }
      }

      function build_element(image, link, title) {
        var a = $('<a>');
        var img = $('<img>');
        var div = $('<div>');

        a.attr('href', link);
        a.attr('title', title);

        img.attr('src', image);
        img.attr('alt', title);

        a.append(img);
        div.append(a);

        div.addClass('item');

        // Preload
        $(img).one('load', function() {
          $(div).addClass('item');
          $('#box').isotope('insert', $(div));
          }).each(function() {
          if(this.complete) $(this).load();
        });
      }
    </script>
